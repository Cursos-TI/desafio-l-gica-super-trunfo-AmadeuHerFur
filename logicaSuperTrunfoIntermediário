#include <stdio.h>
inicio do teste
// Desafio Super Trunfo - Intermediário
//Alterações do nível MESTRE serão implementadas aqui devido à continuidade das funções propostas
//Será utilizada a estrutura inicial do primeiro desafio

int main() {
    
   //Primeira Carta
    
   printf("Informações referentes ao estado A\n");
   printf("Informe o Código para a primeira carta:\n");
   scanf("%s" , &codigo1); 
   printf("Informe uma cidade para esta Carta\n");
   scanf("%s" , &cidade1);
   printf("Informe o valor para a População\n");
   scanf("%d" , &populacao1);
   printf("Informe o valor para a Área\n");
   scanf("%f" , &area1);
   printf("Informe o valor para o PIB\n");
   scanf("%f" , &pib1);
   printf("Informe o valor para o Número de Pontos Turísticos1\n");
   scanf ("%d" , &ponto1);
   
   float densidade1 = (float) populacao1 / area1;
   float capita1 = (float) pib1 / populacao1;
   float poder1 = (float) 1/densidade1 + populacao1 + area1+ pib1 + ponto1 + capita1 
    
   //Segunda Carta 
    
   printf("Informações referentes ao estado B\n");
   printf("Informe o Código a segunda carta:\n");
   scanf("%s" , &codigo2);
   printf("Informe uma cidade para esta Carta\n");
   scanf(%s , &cidade2);
   printf("Informe o valor para a População\n");
   scanf(%d , &populacao2);
   printf("Informe o valor para a Área\n");
   scanf(%f , &area2);
   printf("Informe o valor para o PIB\n");
   scanf(%f , &pib2);
   printf("Informe o valor para o Número de Pontos Turísticos1\n");
   scanf (%d , &ponto2);

   float densidade2 = (float) populacao2 / area2;
   float capita2 = (float) pib2 / populacao2;
   float poder2 = (float) 1/densidade2 + populacao2 + area2+ pib2 + ponto2 + capita2 

  //Visualização dos dados das duas cartas

  //Primeira Carta 
   printf("A primeira carta terá os seguintes valores:\n");
   printf("Código da Carta: %s\n" , codigo1 );
   printf("Cidade: %s\n", cidade1);
   printf("População: %d\n", populacao1);
   printf("Área: %f\n", area1);
   printf("PIB: %f\n", pib1);
   printf("Pontos Turísticos: %d\n" , ponto1);

  //Segunda Carta
   printf("A segunda carta terá os seguintes valores:",\n);
   printf("Código da Carta: %s\n" , codigo2); 
   printf("Cidade: %s\n", cidade2);
   printf("População: %d\n", populacao2);
   printf("Área: %f\n", area2);
   printf("PIB: %f\n", pib2);
   printf("Pontos Turísticos: %d\n" , ponto2); 


  //Comparativo de Cartas

   int = escolha

   printf("Selecione um Valor a ser comparado\n");
   printf("1. População\n");
   printf("2. Área\n");
   printf("3. PIB\n");
   printf("4. Pontos Turísticos\n");
   printf("5. Densidade Demográfica\n");
   printf("6. Superpoder\n"
   scanf("%d", &escolha);

   printf("Resultado:\n");
   
   switch (escolha) {
        case 1:
            printf("População - Carta 1: %d | Carta 2: %d\n", populacao1, populacao2);
            if (populacao1 > populacao2)
                printf("Carta 1 VENCEU\n");
            else if (populacao1 < populacao2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;

        case 2:
            printf("Área - Carta 1: %d | Carta 2: %d\n", area1, area2);
            if (area1 > area2)
                printf("Carta 1 VENCEU\n");
            else if (populacao1 < populacao2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;

        case 3:
            printf("PIB - Carta 1: %d | Carta 2: %d\n", pib1, pib2);
            if (pib1 > pib2)
                printf("Carta 1 VENCEU\n");
            else if (pib1 < pib2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;


        case 4:
            printf("Pontos Turísticos - Carta 1: %d | Carta 2: %d\n", ponto1, ponto2);
            if (ponto1 > ponto2)
                printf("Carta 1 VENCEU\n");
            else if (ponto1 < ponto2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;

        case 5:
            printf("Densidade Demográfica - Carta 1: %d | Carta 2: %d\n", densidade1, densidade2);
            if (densidade1 > densidade2)
                printf("Carta 1 VENCEU\n");
            else if (densidade1 < densidade2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;

        case 6:
            printf("Superpoder - Carta 1: %d | Carta 2: %d\n", poder1, poder2);
            if (poder1 > poder2)
                printf("Carta 1 VENCEU\n");
            else if (poder1 < poder2)
                printf("Carta 2 VENCEU\n");
            else
                printf("EMPATE entre Carta 1 e Carta 2!\n");
            break;

        default:
            printf("Escolha novamente.\n");
            break;
    }

    return 0;
